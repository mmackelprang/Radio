{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "RadioConsole": {
    "ApiBaseUrl": "http://localhost:5100"
  },
  "AudioVisualization": {
    "WaveformBufferSize": 1024,
    "SpectrumFftSize": 512,
    "SpectrumBands": 64,
    "UpdateFrequencyHz": 30
  },
  "TextToSpeech": {
    "Provider": "ESpeak",
    "Azure": {
      "ApiKey": "",
      "Region": "eastus",
      "DefaultVoice": "en-US-JennyNeural"
    },
    "Google": {
      "ApiKey": "",
      "DefaultVoice": "en-US-Standard-A"
    }
  },
  "ConfigurationStorage": {
    "RootDir": "",
    "StoragePath": "./storage",
    "StorageType": "Json",
    "JsonFileName": "config.json",
    "SqliteFileName": "config.db"
  }
}
