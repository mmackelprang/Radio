{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://0.0.0.0:5200"
      }
    }
  },
  "RadioConsole": {
    "ApiBaseUrl": "http://localhost:5100"
  },
  "SoundFlow": {
    "SampleRate": 48000,
    "BitDepth": 16,
    "Channels": 2,
    "BufferSize": 2048,
    "ExclusiveMode": true,
    "PreferredBackend": "alsa",
    "EnableHotPlug": true,
    "HotPlugPollingIntervalMs": 2000,
    "PreferredUsbDevicePattern": "Raddy",
    "LatencyHintMs": 20
  },
  "AudioVisualization": {
    "WaveformBufferSize": 1024,
    "SpectrumFftSize": 512,
    "SpectrumBands": 64,
    "UpdateFrequencyHz": 30
  },
  "TextToSpeech": {
    "Provider": "ESpeak",
    "Azure": {
      "ApiKey": "",
      "Region": "eastus",
      "DefaultVoice": "en-US-JennyNeural"
    },
    "Google": {
      "ApiKey": "",
      "DefaultVoice": "en-US-Standard-A"
    }
  },
  "ConfigurationStorage": {
    "RootDir": "",
    "StoragePath": "./storage",
    "StorageType": "Json",
    "JsonFileName": "config.json",
    "SqliteFileName": "config.db"
  }
}
