<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RadioConsole.Views.FavoritesPage"
             Title="Favorites"
             BackgroundColor="{DynamicResource Background}">

    <Grid Padding="20">
        <CollectionView ItemsSource="{Binding FavoriteItems}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BackgroundColor="{DynamicResource Surface}" 
                           CornerRadius="12"
                           Padding="16"
                           Margin="0,0,0,12">
                        <Grid ColumnDefinitions="*,Auto" 
                              ColumnSpacing="12">
                            <VerticalStackLayout Grid.Column="0" Spacing="8">
                                <Label Text="{Binding Title}" 
                                       FontSize="16" 
                                       FontAttributes="Bold"
                                       TextColor="{DynamicResource OnSurface}" />
                                <HorizontalStackLayout Spacing="8">
                                    <Label Text="{Binding Source}" 
                                           FontSize="12"
                                           TextColor="{DynamicResource Secondary}" />
                                    <Label Text="•" 
                                           FontSize="12"
                                           TextColor="{DynamicResource Secondary}" />
                                    <Label Text="{Binding Details}" 
                                           FontSize="12"
                                           TextColor="{DynamicResource Secondary}" />
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                            <Button Grid.Column="1"
                                    Text="♥"
                                    FontSize="24"
                                    BackgroundColor="{DynamicResource PrimaryContainer}"
                                    TextColor="{DynamicResource OnPrimaryContainer}"
                                    WidthRequest="48"
                                    HeightRequest="48"
                                    CornerRadius="24" />
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
            <CollectionView.EmptyView>
                <VerticalStackLayout VerticalOptions="Center" 
                                   HorizontalOptions="Center"
                                   Spacing="12">
                    <Label Text="No Favorites" 
                           FontSize="18"
                           TextColor="{DynamicResource OnSurface}" />
                    <Label Text="Add your favorite stations and playlists" 
                           FontSize="14"
                           TextColor="{DynamicResource Secondary}"
                           HorizontalTextAlignment="Center" />
                </VerticalStackLayout>
            </CollectionView.EmptyView>
        </CollectionView>
    </Grid>
</ContentPage>
